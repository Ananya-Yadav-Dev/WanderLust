<% layout("/layouts/boilerplate") %>

<div class="row">
  <h3 style="visibility: hidden;">Space</h3>
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="..." />
    <p class="text-muted">
      <i>Owned by </i
      ><span style="color: #64d15a;font-weight: 550;"
        ><%= listing.owner && listing.owner.username ? listing.owner.username : 'Anonymous' %></span
      >
    </p>
    <div class="card-body">
      <p class="card-text"><%= listing.description %></p>
      <p>&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p><%= listing.location %></p>
      <p><%= listing.country %></p>
    </div>
  </div>
  <br />
</div>
<% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
<div class="btns row">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-dark col-1 offset-3 mb-2"
    >Edit</a
  >
  <form
    method="post"
    action="/listings/<%= listing._id %>?_method=DELETE"
    class="col-1 mb-2"
  >
    <button class="btn btn-dark delete-btn">Delete</button>
  </form>
  <% } %>
  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review:</h4>
    %>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3">
        <label for="rating" class="form-label">Rating:</label>

        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible"></label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good"></label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average"></label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good"></label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing"></label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="5"
          cols="30"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>

      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <h4 style="color: #ffc107"><b>Reviews</b></h4>
    <div class="row mt-3">
      <%if(listing.reviews.length==0){%>
      <h6 class="text-muted">No reviews posted</h6>
      <% }else{ %>
        <% for(let review of listing.reviews){ %>

      <div class="card col-5 mb-3 ms-3">
        <div class="card-body mt-2" style="overflow-x: auto;">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p class="card-text text-muted"><%=review.comment%></p>
          <p
            class="starability-result card-text"
            data-rating="<%=review.rating%>"
          ></p>
          <form
            class="mb-3"
            method="post"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark btn-sm review-btn">Delete</button>
          </form>
        </div>
      </div>

      <% }
      }%>
    </div>
  </div>
</div>
