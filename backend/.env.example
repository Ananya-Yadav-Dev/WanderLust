# MongoDB Atlas Connection String
# Get this from: MongoDB Atlas -> Database -> Connect -> Connect your application
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/wanderlust?retryWrites=true&w=majority
MONGO_URL=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/wanderlust?retryWrites=true&w=majority

# Cloudinary Configuration (for image uploads)
# Get these from: https://cloudinary.com/console
CLOUD_NAME=your_cloudinary_cloud_name
CLOUD_API_KEY=your_cloudinary_api_key
CLOUD_API_SECRET=your_cloudinary_api_secret

# JWT Secret for authentication (use a random string for production)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Environment
NODE_ENV=development

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Backend Port
PORT=8080
